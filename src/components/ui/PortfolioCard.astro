---
import Button from './Button.astro';

export interface Props {
  item: {
    image: string;
    alt: string;
    impacts: string[];
    title?: string;
    reportUrl?: string;
  };
}

const { item } = Astro.props;
---

<div class="portfolio-item">
  <div class="portfolio-image">
    <img src={item.image} alt={item.alt} />
  </div>
  <div class="portfolio-content">
    {item.title ? (
      <p><strong>{item.title}</strong></p>
    ) : (
      <p><strong>Key Impacts:</strong></p>
    )}
    {item.impacts.length > 0 && (
      <ul>
        {item.impacts.map((impact) => <li>{impact}</li>)}
      </ul>
    )}
    <Button variant="primary" href={item.reportUrl}>View Report</Button>
  </div>
</div>

<style>
  .portfolio-item {
    background: var(--white);
    border-radius: var(--border-radius);
    overflow: hidden;
    box-shadow: var(--shadow-light);
    transition: var(--transition);
    border: 1px solid rgba(0, 0, 0, 0.05);
    display: flex;
    flex-direction: column;
  }

  .portfolio-item:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-medium);
  }

  .portfolio-image {
    width: 100%;
    background: #f8f9fa;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 1rem;
    min-height: 250px;
  }

  .portfolio-item img {
    width: 100%;
    height: auto;
    object-fit: contain;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .portfolio-content {
    padding: 1.5rem;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }

  .portfolio-content ul {
    margin: 1rem 0;
    padding-left: 1.2rem;
    flex-grow: 1;
  }

  .portfolio-content li {
    margin-bottom: 0.5rem;
    font-size: 0.9rem;
    color: var(--text-light);
  }

  /* Ensure button stays at bottom */
  .portfolio-content :global(.btn) {
    margin-top: auto;
  }
</style>